<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Post" table="post">
    <id name="id" type="string" column="id" length="45"/>
    <id name="source" type="string" column="source" length="45"/>
    <field name="content" type="text" column="content" nullable="false"/>
    <field name="picture" type="object" column="picture" nullable="false"/>
    <field name="author" type="string" column="author" length="45" nullable="false"/>
    <field name="datePublish" type="datetime" column="date_publish" nullable="false"/>
    <field name="dateCreate" type="datetime" column="date_create" nullable="false"/>
  </entity>
</doctrine-mapping>
